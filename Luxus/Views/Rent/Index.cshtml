@model IEnumerable<Luxus.Models.Rent>

@{
    ViewBag.Title = "Index";
}

<style>


    #BookNew {
       
        background-color: #67f79e;
        text-align: center;
        width: 75px;
        height: 75px;
        -webkit-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        border: 1px solid;
        position: center;
        font-size: 50px;
        padding-top: 0px;
    }

</style>


<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2 style="text-align:center; margin-top: 0px;">Lend Books</h2>
        </div>
    </div> <!-- End ------------------------------------------------------------------------------->
</header>





<br />


@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipientName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipientName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}
    
    

</table>


<div id="BookNew" style="float:left;">
    @Html.ActionLink("+", "Create")


</div>

}

else
{

    <h3>You Dont Have Any Lent Books Yet.</h3>

    <br />
    <br />
    <div id="BookNew" style="float:left;">
        @Html.ActionLink("+", "Create")


    </div>
}

