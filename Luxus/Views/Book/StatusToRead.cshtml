@model IEnumerable<Luxus.Models.Book>

@{
    ViewBag.Title = "MyBooks";
}
<style>
    #BookContainer {
        width: 200px;
        height: 300px;
        border: 1px solid;
        display: inline-block;
        text-align: center;
        margin-top: 15px;
        margin-left: 15px;
        -webkit-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
    }

    #BookImg {
        width: 50px;
        height: 50px;
        border: 1px solid;
        text-align: center;
    }

    #BookTitle {
        text-align: center;
    }

    #BookAuthor {
        text-align: center;
    }

    #BookRating {
        text-align: center;
    }

    #BookNew {
        float: right;
        background-color: #67f79e;
        text-align: center;
        width: 75px;
        height: 75px;
        -webkit-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.75);
        border: 1px solid;
        position: center;
        font-size: 50px;
        padding-top: 0px;
    }

    #inlineid {
        display: inline-block;
    }
</style>




<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">
                <form class="form-header" action="" method="POST"></form>
                <div class="header-button">

                </div>
            </div>
        </div>
    </div> <!-- End ------------------------------------------------------------------------------->
</header>

<h2 style="text-align:center; margin-top: -50px;">All Books</h2>
<br />
<br />

<div style="text-align:center; margin-top: -20px;">
    @using (Html.BeginForm("Search", "Book", FormMethod.Get))
    {

        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />

    }
</div>
<br />
<br />


<div class="row">
</div>

@if (Model != null)
{
    <div id="inlineid">

        @foreach (var item in Model)
        {
            <div id="BookContainer">
                <div id="BookImg"> @Html.DisplayFor(model => item.Image) </div><br />
                <div id="BookTitle">@Html.DisplayFor(model => item.Title)</div><br />
                <div id="BookAuthor">@Html.DisplayFor(model => item.Author)</div><br />
                <div id="BookRating">@Html.DisplayFor(model => item.Rating)</div><br />
                @Html.ActionLink("Delete", "Delete", new { id = item.BookID })


            </div>
        }
    </div>


}


else
{
    <h3>Not found !</h3>
}




<div class="row">
</div>
<div id="BookNew">
    @Html.ActionLink("+", "Create")


</div>
